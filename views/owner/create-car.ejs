<script>
    document.getElementById('createCarForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const token = localStorage.getItem('token');
        const user = JSON.parse(localStorage.getItem('user'));
        if (!token) return window.location.href = '/login';

        const formData = new FormData();
        formData.append('name', document.getElementById('name').value);
        formData.append('brand', document.getElementById('brand').value);
        formData.append('price', document.getElementById('price').value);
        formData.append('transmission', document.getElementById('transmission').value);
        formData.append('location', document.getElementById('location').value);
        formData.append('description', document.getElementById('description').value);
        formData.append('ownerId', user._id);
        
        const fileInput = document.getElementById('image');
        if (fileInput.files.length > 0) {
            formData.append('image', fileInput.files[0]); 
        }

        try {
            const res = await fetch('/api/v1/cars', {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${token}` 
                },
                body: formData
            });

            const data = await res.json();
            if (res.ok) {
                alert('üéâ ƒêƒÉng xe th√†nh c√¥ng!');
                window.location.href = '/owner/dashboard';
            } else {
                alert(data.error || 'L·ªói khi ƒëƒÉng xe');
            }
        } catch (err) {
            alert('L·ªói k·∫øt n·ªëi Server');
        }
    });
</script>
