<script>
    async function loadAdminStats() {
        const token = localStorage.getItem('token');
        const user = JSON.parse(localStorage.getItem('user'));

        // Ki·ªÉm tra quy·ªÅn Admin
        if (!user || user.role !== 'ADMIN') {
            alert('‚õî B·∫°n kh√¥ng c√≥ quy·ªÅn truy c·∫≠p trang n√†y!');
            window.location.href = '/';
            return;
        }

        try {
            // G·ªçi API Admin Stats (B·∫°n ƒë√£ c√≥ ·ªü backend)
            const res = await fetch('/api/v1/bookings/admin/summary', {
                headers: { 'Authorization': `Bearer ${token}` }
            });
            const data = await res.json();

            // Hi·ªÉn th·ªã T·ªïng s·ªë ƒë∆°n
            document.getElementById('totalBookings').innerText = data.total;

            const table = document.getElementById('statsTable');
            table.innerHTML = '';
            
            let totalRevenue = 0;

            // Duy·ªát qua t·ª´ng nh√≥m tr·∫°ng th√°i (Pending, Confirmed...)
            data.breakdown.forEach(item => {
                totalRevenue += item.totalRevenue; // C·ªông d·ªìn doanh thu

                // M√†u s·∫Øc badge cho ƒë·∫πp
                let badgeColor = 'secondary';
                if(item._id === 'CONFIRMED') badgeColor = 'primary';
                if(item._id === 'COMPLETED') badgeColor = 'success';
                if(item._id === 'CANCELLED') badgeColor = 'danger';

                const html = `
                    <tr>
                        <td><span class="badge bg-${badgeColor}">${item._id}</span></td>
                        <td class="fw-bold">${item.count}</td>
                        <td class="text-success">${item.totalRevenue.toLocaleString()} ƒë</td>
                        <td>${Math.round((item.count / data.total) * 100)}%</td>
                    </tr>
                `;
                table.innerHTML += html;
            });

            // Hi·ªÉn th·ªã T·ªïng doanh thu
            document.getElementById('totalRevenue').innerText = totalRevenue.toLocaleString() + ' ƒë';

        } catch (err) {
            console.error(err);
            document.getElementById('statsTable').innerHTML = '<tr><td colspan="4" class="text-center text-danger">L·ªói k·∫øt n·ªëi Server</td></tr>';
        }
    }

    loadAdminStats();
</script>
